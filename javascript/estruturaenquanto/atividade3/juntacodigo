        <h2>Atividade 3 - Números divisíveis por 5</h2>
        <font face="arial">
            <form name="frmnumint" id="#" method="get" onsubmit="return validaProc()">
                <fieldset class="cadinteiro">
                    <legend>Entrada de dados</legend>
                    <br>
                    <button type="submit">Enviar</button>
                </fieldset>
            </form>
        </font>
    </section>
    <script>
        function validaProc(){
    
    let i = 1;
    let divideCinco = 0;
    let somaDivisivel = 0;

     while(i <= 3){

        let numero = parseInt(prompt("Insira o " + i + "º número: "));
        i++;

            if(numero % 5 == 0){
            divideCinco = numero;
            console.log("O número " + divideCinco + " é divisível por 5.");
            somaDivisivel = somaDivisivel + divideCinco;
        }

    }

    console.log("O resuldado da soma dos números divisíveis por 5 é: " + somaDivisivel);

    return false;
}

    </script>
