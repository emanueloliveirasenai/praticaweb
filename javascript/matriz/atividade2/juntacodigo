                <body>
                    <section>
                        <h2>Atividade 1 - Matriz (2x2) soma dos elementos</h2>
                        <font face="arial">
                            <form name="frmnumint" id="#" method="get" onsubmit="return validaProc()">
                                <fieldset class="cadinteiro">
                                    <legend>Entrada de dados</legend>
                                    <br>
                                    <button type="submit">Enviar</button>
                                </fieldset>
                            </form>
                        </font>
                    </section>
                    <script>
                                function validaProc() {
                            let matriz = [];
                            let linhas = 2;
                            let colunas = 2;
                            let acum = 0;

                            for (let i = 0; i < linhas; i++) {
                                matriz[i] = [];
                                for (let c = 0; c < colunas; c++) {
                                    matriz[i][c] = parseInt(prompt("Insira o elemento da linha " + (i + 1) + ", coluna " + (c + 1) + ":"));
                                }
                            }

                            let linhaSoma = parseInt(prompt("Insira o número da linha que você deseja somar:"));

                            let numeroLinha = linhaSoma - 1;

                            for (c = 0; c < colunas; c++) {
                                acum = acum + matriz[numeroLinha][c];
                            }

                            console.log("A soma da linha " + linhaSoma + " é " + acum);

                            return false;
                        }
                    </script>
