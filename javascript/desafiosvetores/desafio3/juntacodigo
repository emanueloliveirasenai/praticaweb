                    <section>
                        <h2>Desafio 3 - Multiplicação dos números dos vetores</h2>
                        <font face="arial">
                            <form name="frmnumint" id="#" method="get" onsubmit="return validaProc()">
                                <fieldset class="cadinteiro">
                                    <legend>Entrada de dados</legend>
                                    <br>
                                    <button type="submit">Enviar</button>
                                </fieldset>
                            </form>
                        </font>
                    </section>
                    <script>
                        function validaProc() {
                            let vetor = [];
                            let vetorResult = [];
                            let numInt = 0;
                            let i;

                            for (i = 0; i < 5; i++) {
                                vetor[i] = parseInt(prompt("Insira o " + (i + 1) + "º Valor:"));
                            }

                            numInt = parseInt(prompt("Insira o número para multiplicar os valores do vetor:"));

                            for (i = 0; i < 5; i++) {
                                vetorResult[i] = vetor[i] * numInt;
                            }

                            for (i = 0; i < 5; i++) {
                                console.log("O resultado da multiplicação da posição " + (i+1) + " do vetor é: " + vetorResult[i]);
                            }

                            return false;
                        }
                    </script>
