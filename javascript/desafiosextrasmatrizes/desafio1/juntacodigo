                    <section>
                        <h2>Desafio Extra 1 - Valores na diagonal</h2>
                        <font face="arial">
                            <form name="frmnumint" id="#" method="get" onsubmit="return validaProc()">
                                <fieldset class="cadinteiro">
                                    <legend>Entrada de dados</legend>
                                    <br>
                                    <button type="submit">Enviar</button>
                                </fieldset>
                            </form>
                        </font>
                    </section>
                    <script>
                        function validaProc(){

                            let matriz = [];
                            let linha = 4;
                            let coluna = 4;

                            for(i = 0; i < linha; i++){
                                matriz[i] = [];
                                for(c = 0; c < coluna; c++){
                                    matriz[i][c] = Math.floor(Math.random() * 99) + 10;
                                }
                            }

                            document.write("Matriz Principal: <br>")
                            for(i = 0; i < linha; i++){
                                for(c = 0; c < coluna; c++){
                                    document.write(matriz[i][c] + "&nbsp&nbsp")
                                }
                                document.write("<br>")
                            }

                            document.write("<br>Matriz diagonal <br>")

                            for(i = 0; i < linha; i++){
                                    document.write(matriz[i][i] + "&nbsp&nbsp")
                                    document.write("<br>")
                            }

                            document.write("<br>Matriz diagonal secundária<br>")

                            for(i = 0; i < linha; i++){
                                document.write(matriz[i][4 -1 - i] + "&nbsp&nbsp")
                                document.write("<br>")
                            }
                        }
                    </script>
