                    <script>
                            function validaProc(){

                        let vetor = [];
                        let i;

                        for(i = 0; i<10; i++){

                            vetor [i] = parseFloat(prompt("Insira o " + (i+1) + "º número:"));

                            if(i % 2 != 0){
                                console.log("Vetor posição " + i + " = " + vetor[i]);
                            }
                        }



                        return false;
                    }
                    </script>
